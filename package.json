{
  "name": "discord-forum-bot",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development nodemon --exec ts-node src/main.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t discord-forum-bot .",
    "docker:rebuild": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:deploy": "docker compose down && docker compose up -d --build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "keywords": [
    "discord",
    "bot",
    "forum",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "Discord bot for automatic forum creation from messages and reactions",
  "dependencies": {
    "discord.js": "^14.21.0",
    "reflect-metadata": "^0.1.14",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}