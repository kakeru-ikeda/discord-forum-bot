# Discord Bot Configuration
# このファイルを .env にコピーして実際の値を設定してください

# Discord Bot Token (必須)
DISCORD_TOKEN=your_bot_token_here

# Guild (Server) ID (必須)
GUILD_ID=your_guild_id_here

# 監視するチャンネルIDのリスト（カンマ区切り、必須）
MONITOR_CHANNEL_IDS=channel_id_1,channel_id_2

# フォーラム投稿先チャンネルID (必須)
FORUM_CHANNEL_ID=your_forum_channel_id_here

# アラート通知先チャンネルID (必須)
ALERT_CHANNEL_ID=your_alert_channel_id_here

# フォーラム作成のトリガー絵文字 (オプション、デフォルト: 🙋)
# サポートする形式:
# - Unicode絵文字: 🙋
# - デフォルト絵文字名: :person_raising_hand:
# - カスタム絵文字: <:emoji_name:123456789>
# - アニメーション絵文字: <a:emoji_name:123456789>
TRIGGER_EMOJI=:person_raising_hand:

# 質問として認識するプレフィックス (オプション、デフォルト: 質問！)
QUESTION_PREFIX=質問！

# 実行環境 (オプション、デフォルト: development)
# production: 本番環境, development: 開発環境
NODE_ENV=development

# ログレベル (オプション、デフォルト: info)
LOG_LEVEL=info

# ファイルログの有効化 (オプション、デフォルト: true)
ENABLE_FILE_LOGGING=true

# Discordアラートの有効化 (オプション、デフォルト: true)
ENABLE_DISCORD_ALERTS=true

# ログファイルのパス (オプション、デフォルト: ./logs/bot.log)
LOG_FILE_PATH=./logs/bot.log

# フォーラムタイトルの最大長 (オプション、デフォルト: 100)
MAX_TITLE_LENGTH=100

# コンテンツプレビューの最大長 (オプション、デフォルト: 200)
MAX_CONTENT_PREVIEW=200
